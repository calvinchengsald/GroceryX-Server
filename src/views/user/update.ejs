<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>Edit User</h1>

      <form action="/user/update/<%= user.id %>" method="post">
        <div class="form-group">
          <label for="title"> Name</label>
          <input value="<%= user.name %>" type="text" class="form-control" name="name" aria-describedby="titleHelp" placeholder="Name">
        </div>
        <div class="form-group">
          <label for="description">Password</label>
          <input value="<%= user.password %>" type="text" class="form-control" name="password" aria-describedby="titleHelp" placeholder="Password">

        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
