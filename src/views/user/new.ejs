<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>New User</h1>

      <form action="/user/create" method="post">
        <div class="form-group">
          <label for="title">User Name</label>
          <input type="text" class="form-control" name="name" aria-describedby="titleHelp" placeholder="Enter Name">
        </div>
        <div class="form-group">
          <label for="description">Password</label>
          <input type="password" class="form-control" name="password" aria-describedby="titleHelp" placeholder="Enter Password">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
      

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
